{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "standard"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "linebreak-style": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "semi": 0,
        "comma-dangle": 0,

        //Severity should be one of the following: 0 = off, 1 = warn, 2 = error
        // Added rules which overwrite
        "no-tabs": 0,
        "indent": 0,
        "space-before-function-paren": 0,
        "multiline-ternary": 0,
        "react/jsx-key": 0
    }
}
